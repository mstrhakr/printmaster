{
  "version": "0.2.0",
  "configurations": [
    // ========== Agent Debugging ==========
    {
      "name": "Debug: Agent (Default Port)",
      "type": "go",
      "request": "launch",
      "mode": "exec",
      "program": "${workspaceFolder}\\agent\\printmaster-agent.exe",
      "cwd": "${workspaceFolder}\\agent",
      "env": {},
      "args": [],
      "showLog": true,
      "preLaunchTask": "Prep: Agent (Kill + Build Dev)"
    },
    {
      "name": "Debug: Agent (Port 9090)",
      "type": "go",
      "request": "launch",
      "mode": "exec",
      "program": "${workspaceFolder}\\agent\\printmaster-agent.exe",
      "cwd": "${workspaceFolder}\\agent",
      "env": {},
      "args": ["-port", "9090"],
      "showLog": true,
      "preLaunchTask": "Prep: Agent (Kill + Build Dev)"
    },
    {
      "name": "Debug: Agent (Custom Config)",
      "type": "go",
      "request": "launch",
      "mode": "exec",
      "program": "${workspaceFolder}\\agent\\printmaster-agent.exe",
      "cwd": "${workspaceFolder}\\agent",
      "env": {},
      "args": ["-config", "config.ini"],
      "showLog": true,
      "preLaunchTask": "Prep: Agent (Kill + Build Dev)"
    },
    {
      "name": "Run: Agent (No Debug)",
      "type": "go",
      "request": "launch",
      "mode": "exec",
      "program": "${workspaceFolder}\\agent\\printmaster-agent.exe",
      "cwd": "${workspaceFolder}/agent",
      "args": [],
      "env": {},
      "preLaunchTask": "Prep: Agent (Kill + Build Dev)"
    },
    
    // ========== Server Debugging ==========
    {
      "name": "Debug: Server (Default Port)",
      "type": "go",
      "request": "launch",
      "mode": "exec",
      "program": "${workspaceFolder}\\server\\printmaster-server.exe",
      "cwd": "${workspaceFolder}\\server",
      "env": {},
      "args": [],
      "showLog": true,
      "preLaunchTask": "Prep: Server (Kill + Build Dev)"
    },
    {
      "name": "Debug: Server (Port 8080)",
      "type": "go",
      "request": "launch",
      "mode": "exec",
      "program": "${workspaceFolder}\\server\\printmaster-server.exe",
      "cwd": "${workspaceFolder}\\server",
      "env": {},
      "args": ["-port", "9090"],
      "showLog": true,
      "preLaunchTask": "Prep: Server (Kill + Build Dev)"
    },
    {
      "name": "Run: Server (No Debug)",
      "type": "go",
      "request": "launch",
      "mode": "exec",
      "program": "${workspaceFolder}\\server\\printmaster-server.exe",
      "cwd": "${workspaceFolder}/server",
      "args": [],
      "env": {},
      "preLaunchTask": "Prep: Server (Kill + Build Dev)"
    },
    
    // ========== Test Debugging ==========
    {
      "name": "Debug: Current Test Function",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${fileDirname}",
      "args": [
        "-test.v",
        "-test.run",
        "^${selectedText}$"
      ],
      "showLog": true
    },
    {
      "name": "Debug: All Tests in Package",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${fileDirname}",
      "args": ["-test.v"],
      "showLog": true
    },
    {
      "name": "Debug: Current File Tests",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${fileDirname}",
      "args": [
        "-test.v",
        "-test.run",
        "${fileBasenameNoExtension}"
      ],
      "showLog": true
    },
    
    // ========== Attach Configurations ==========
    {
      "name": "Attach: Process (PID)",
      "type": "go",
      "request": "attach",
      "mode": "local",
      "processId": "${command:pickProcess}"
    }
  ],
  
  // ========== Auto-Join Debug Configurations ==========
    {
      "name": "Debug: Server (Auto-Join)",
      "type": "go",
      "request": "launch",
      "mode": "exec",
      "program": "${workspaceFolder}\\server\\printmaster-server.exe",
      "cwd": "${workspaceFolder}\\server",
      "env": {
        "INIT_SECRET": "debug-auto-join-secret"
      },
      "args": [],
      "showLog": true,
      "preLaunchTask": "Prep: Server (Kill + Build Dev)"
    },
    {
      "name": "Debug: Agent (Auto-Join)",
      "type": "go",
      "request": "launch",
      "mode": "exec",
      "program": "${workspaceFolder}\\agent\\printmaster-agent.exe",
      "cwd": "${workspaceFolder}\\agent",
      "env": {
        "SERVER_URL": "http://localhost:9090",
        "INIT_SECRET": "debug-auto-join-secret"
      },
      "args": [],
      "showLog": true,
      "preLaunchTask": "Prep: Agent (Kill + Build Dev)"
    }
  ],
  
  // ========== Compound Configurations ==========
  "compounds": [
    {
      "name": "Debug: Agent + Server Together",
      "configurations": [
        "Debug: Server (Default Port)",
        "Debug: Agent (Default Port)"
      ],
      "stopAll": true
    },
    {
      "name": "Debug: Agent + Server (Auto-Join)",
      "configurations": [
        "Debug: Server (Auto-Join)",
        "Debug: Agent (Auto-Join)"
      ],
      "stopAll": true,
      "presentation": {
        "order": 1,
        "group": "auto-join"
      }
    }
  ]
}

